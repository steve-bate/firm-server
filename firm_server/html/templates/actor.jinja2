{% extends "layout.jinja2" %}

{% set header_image = resource.image.url if resource.image else "https://placehold.co/1200x300" %}
{% set avatar_image = resource.icon.url if resource.icon else "https://placehold.co/80x80" %}

{% block style %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<style>
    header {
        background-image: url('{{ header_image }}');
        background-size: cover;
        background-position: center center;
        height: 200px;
        position: relative;
    }

    .profile-info .address-type {
        font-weight: bold;
    }

    .profile-avatar {
        width: 80px;
        height: 80px;
        border-radius: 8px;
        border: 2px solid #1a1a1a;
        position: absolute;
        bottom: -40px;
        left: 20px;
    }

    .profile-info .address {
        padding-left: 2rem;
        font-size: 1.5rem;
    }

    .profile-info .address-type {
        font-weight: bold;
    }

    .profile-info {
        padding: 40px 20px 20px 0px;
    }

    .profile-info h1 {
        margin: 0;
        font-size: 24px;
        font-weight: bold;
    }

    .profile-info h2 {
        margin-top: 1rem;
        margin-bottom: 0.5rem;
        font-size: 18px;
        font-weight: bold;
    }

    .profile-info ul {
        margin: 0;
        margin-left: 2rem;
    }

    .profile-info li {
        margin: 0;
    }

    .profile-info p {
        margin: 5px 0;

    }

    .profile-info .admin-badge {
        display: inline-block;
        padding: 2px 8px;
        border: 1px solid #6a5acd;
        border-radius: 4px;
        color: #6a5acd;
        font-size: 12px;
        margin-top: 5px;
    }

    .dark-mode .admin-badge {
        border: 1px solid lightgreen;
        color: lightgreen;
    }

    .edit-profile-btn {
        background-color: #6a5acd;
        color: #ffffff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        position: absolute;
        right: 20px;
        top: 20px;
    }

    .profile-details {
        background-color: #2a2a2a;
        padding: 20px;
        margin-top: 20px;
        border-radius: 8px;
    }

    .profile-details p {
        margin: 0;
        color: #b0b0b0;
    }

    .tabs {
        display: flex;
        justify-content: space-around;
        margin-top: 1rem;
        margin-bottom: 1rem;
        border-bottom: 1px solid #444;
    }

    .tabs div {

        cursor: pointer;
    }

    .tabs .active {
        border-bottom: 2px solid #6a5acd;
        color: #6a5acd;
    }

    .dark-mode .tabs .active {
        border-bottom: 2px solid lightgreen;
        color: lightgreen;
    }

    .post {
        /*display: flex;*/
        /*padding: 20px;*/
        /*border-bottom: 1px solid #444;*/
        margin-bottom: 2rem;
    }

    .post img {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        margin-right: 10px;
    }

    .post-content {
        margin-top: 1rem;
        display: flex;
    }

    .post-content p {
        margin: 0;
    }

    .post-content .username {
        font-weight: bold;
    }

    .post-content .handle {
        color: #b0b0b0;
    }

    .post-content .time {
        color: #b0b0b0;
        font-size: 12px;
    }

    .post-actions {
        display: flex;
        justify-content: space-around;
        margin-top: 2rem;
    }

    .post-actions i {
        color: #b0b0b0;
        cursor: pointer;
    }

    .profile-summary {
        margin-top: 1rem;
    }

    .profile-properties {
        margin-left: 4rem;
        width: 80%;
    }

    @media (max-width: 600px) {
        .profile-info .address {
            padding-left: 0;
        }

        .profile-properties {
            margin: 0;
            width: 100%;
        }
    }
</style>
{% endblock %}

{% block header %}
<img src="{{ avatar_image }}" alt="Profile header" class="profile-avatar">
<button class="edit-profile-btn">Edit profile</button>
{% endblock %}

{% block main %}
<section>
    <div class="profile-info">
        <h1>{{ resource.name }}</h1>
        <p class="address"><span class="address-type">Mastodon:</span>
            @{{ resource.preferredUsername }}@{{ request.url.hostname }}</p>
        <p class="address"><span class="address-type">ActivityPub:</span> {{ resource.id }}</p>
        {% if "server/admin" in roles or "tenant/admin" in roles %}
        <div class="admin-badge"><i class="fas fa-user-shield"></i> Admin {{ request.url.hostname }}</div>
        {% endif %}
        <div class="profile-summary">{{ resource.summary | safe }}</div>
        {% if resource.alsoKnownAs %}
        <div class="actor-aka">
            <h2>Also Known As:</h2>
            {% if not resource.alsoKnownAs is string %}
            <ul>
                {% for aka in resource.alsoKnownAs %}
                <li>{{ aka }}</li>
                {% endfor %}
            </ul>
            {% else %}
            <ul>
                <li>{{ resource.alsoKnownAs }}</li>
            </ul>
            {% endif %}
            <h2>
        </div>
        {% endif %}
        {% if resource.attachment %}
        <h2>See Also:</h2>
        <table class="profile-properties">
            <tbody>
                {% for p in resource.attachment %}
                <tr>
                    <td>{{ p.name }}</td>
                    <td>{{ p.value | safe }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% endif %}
    </div>

    <!--
    <div class="profile-details">
        <p>JOINED</p>
        <p>May 13, 2024 (TODO)</p>
    </div>
    -->
    <div class="tabs">
        <div class="active">Posts</div>
        <div>Posts and replies</div>
        <div>Media</div>
    </div>
    {% for post in timeline %}
    <div class="post">
        <div class="post-content">
            <img src="{{ avatar_image }}" alt="Avatar">
            <div>
                <p>
                    <span class="username">{{ resource.name or resource.preferredUsername }}</span>
                    <span class="handle">@{{ resource.preferredUsername }}</span>
                </p>
                {# TODO sanitize content #}
                <p>{{ post.content | safe }}</p>
            </div>

        </div>
        <div class="post-actions">
            <i class="far fa-comment"></i>
            <i class="fas fa-retweet"></i>
            <i class="far fa-heart"></i>
            <i class="far fa-bookmark"></i>
            <span class="time">5d</span>
        </div>
    </div>
    {% endfor %}
</section>
{% endblock main %}
